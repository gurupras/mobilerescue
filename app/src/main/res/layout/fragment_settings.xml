<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.gurupras.mobilerescue.MainActivity$SettingsFragment" >

    <TextView
        android:id="@+id/hostname_display_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="56dp"
        android:focusable="false"
        android:text="Hostname" />

    <EditText
        android:id="@+id/hostname_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/hostname_display_textview"
        android:layout_alignBottom="@+id/hostname_display_textview"
        android:layout_marginLeft="17dp"
        android:layout_toRightOf="@+id/hostname_display_textview" />

    <TextView
        android:id="@+id/port_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:text="Port"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/hostname_display_textview"
        android:layout_alignLeft="@+id/hostname_display_textview" />

    <EditText
        android:id="@+id/port_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/port_textview"
        android:layout_alignBottom="@+id/port_textview"
        android:layout_alignLeft="@+id/hostname_edittext"
        android:layout_toRightOf="@+id/port_textview"
        android:inputType="number" />

    <TextView
        android:id="@+id/serverPort_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:text="Server Port"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/port_textview"
        android:layout_alignLeft="@+id/hostname_display_textview" />

    <EditText
        android:id="@+id/serverPort_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/serverPort_textview"
        android:layout_alignBottom="@+id/serverPort_textview"
        android:layout_toRightOf="@+id/serverPort_textview"
        android:layout_alignLeft="@+id/hostname_edittext"
        android:inputType="number" />
</RelativeLayout>
